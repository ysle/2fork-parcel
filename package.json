{
	"name": "2fork-parcel",
	"version": "0.0.1",
	"description": "",
	"scripts": {
		"start": "parcel src/index.html --open --https -p 443",
		"prebuild": "rm -rf docs",
		"build": "parcel build --dist-dir docs --no-source-maps --public-url /2fork-parcel src/index.html",
		"preversion": "npm run lint",
		"version": "npm run build && git add -A docs",
		"postversion": "git push && git push --tags",
		"lint": "prettier --check src"
	},
	"homepage": "https://github.com/ysle/2fork-parcel#readme",
	"devDependencies": {
		"parcel": "^2.0.0-beta.1",
		"prettier": "^2.1.2"
	},
	"prettier": {
		"useTabs": true,
		"tabWidth": 4,
		"semi": false,
		"singleQuote": true,
		"bracketSpacing": true,
		"arrowParens": "avoid",
		"printWidth": 300,
		"trailingComma": "none"
	}
}
